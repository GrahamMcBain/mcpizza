{
  "functions": {
    "api/mcp.py": {
      "runtime": "python@3.9"
    }
  },
  "env": {
    "MCPIZZA_REAL_API": "true",
    "MCPIZZA_FALLBACK_MOCK": "true"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
